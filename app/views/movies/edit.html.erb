<h1>Edit movie</h1>

<%= simple_form_for @movie, :html => { :multipart => true } do |f| %>
  <%= f.input :title, label: 'Movie title' %>
  <%= f.input :text, label: 'Movie text' %>
  <%= f.select :category_id, @categories %>
  <%= f.file_field :preview, label: 'Movie preview' %>
  <%# <%= f.input :rating, label: 'Movie rating' %>
  <%# <%= f.input :category, label: 'Movie category' %> %> %>
  <%= f.button :submit, 'Edit', class: 'btn btn-primary m-3' %>
<% end %>
