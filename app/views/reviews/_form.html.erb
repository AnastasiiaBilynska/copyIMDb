<%= simple_form_for([@movie, @movie.reviews.build]) do |f| %>
  <div id="rating-form">
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit, class: 'btn btn-primary m-3' %>
<% end %>

<script>
  $('#rating-form').raty({
	number: 10,
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
