<%= simple_form_for(@movie, as: :movie, method: :post, url: admins_movies_path, :html => { :multipart => true }) do |f| %>
  <%= f.input :title, label: 'Movie title' %>
  <%= f.input :text, label: 'Movie text' %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select a category') %>
  <%= f.file_field :preview, label: 'Movie preview' %>
  <%= f.button :submit, 'Save new movie', class: 'btn btn-primary m-3' %>
<% end %>
